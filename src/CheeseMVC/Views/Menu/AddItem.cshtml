@model CheeseMVC.ViewModels.AddMenuItemViewModel

@{ 
    ViewBag.Title = "Add Item to Menu:" + Model.Menu.Name;
}

<form asp-controller="Menu" asp-action="AddItem">

    <div class="form-group">

        <label asp-for="Cheeses"></label>
        <select asp-for="Cheeses" asp-items="@Model.Cheeses"></select>
        <span asp-validation-for="Cheeses"></span>

        <input type="hidden" name="MenuID" value="@Model.Menu.ID" />
    </div>

    <input type="submit" value="Add Item" />

</form>


